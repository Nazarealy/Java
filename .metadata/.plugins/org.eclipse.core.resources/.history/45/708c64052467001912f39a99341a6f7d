package ua.lviv.iot.cutlery.models;

public class ForkCutlery extends Cutlery {
	
	private int needlesnumber;
	private Sharpness sharpnessstate; 

	public ForkCutlery() {
	}

	public ForkCutlery(double rating, double price, String material, String production, int needlesnumber, Sharpness sharpnessstate) {
		super(rating, price, material, production);
		this.needlesnumber = needlesnumber;
		this.sharpnessstate = sharpnessstate;

	}



	public void setNeedlesnumber(int needlesnumber) {
		this.needlesnumber = needlesnumber;
	}

	public Sharpness getSharpnessstate() {
		return sharpnessstate;
	}

	public void setSharpnessstate(Sharpness sharpnessstate) {
		this.sharpnessstate = sharpnessstate;
	}

	@Override
	public String toString() {
		return "\n" + super.toString() + "ForkCutlery [needlesnumber=" + needlesnumber + ", sharpnessstate=" + sharpnessstate + "]";
	}

	
}
